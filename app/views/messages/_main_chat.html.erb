<div class="chat_header">
  <div class="left_header">
    <div class="header_title">
      hogehoge
    </div>
  </div>
  <div class="right_header">
    <div class="header_button">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="messages">
  <div class="message">
    <div class="upper_message">
      <div class="message_user">Sum</div>
      <div class="message_date">2020/11/01(Mon) 12:34:30</div>
    </div>
    <div class="lower_message">
      <div class="message_content">おはよう！</div>
    </div>
  </div>

  <div class="message">
    <div class="upper_message">
      <div class="message_user">Tim</div>
      <div class="message_date">2020/11/02(Tue) 12:34:30</div>
    </div>
    <div class="lower_message">
      <div class="message_content">Hello!</div>
    </div>
  </div>
</div>

<%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form_input">
    <%= f.text_field :content, class: 'form_message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form_submit' %>
<% end %>